# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET		/										controllers.WebController.index()
GET		/1										controllers.Assets.at(path="/public/html", file="index.html")

GET		/update									controllers.WebController.updateGameContext()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)

# Server Resources for html/css/js 
GET     /public/html/*file     		controllers.Assets.at(path="/public/html", file)
GET     /public/js/*file     		controllers.Assets.at(path="/public/js", file)
GET     /public/css/*file     		controllers.Assets.at(path="/public/css", file)
